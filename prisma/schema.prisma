generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         Int     @id @default(autoincrement())
  name       String
  email      String  @unique
  password   String
  image      String?  // Make sure this is nullable if the image can be optional
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Store Store[]
}

model Store{
  id Int @id @default(autoincrement())
  user_id Int
  user User @relation(fields: [user_id],references: [id])
  title String @db.VarChar(300)
  content String 
  category String? 
  image String @db.VarChar(100)
  sold Boolean?
  price Int?
  Month Int?
  Year Int?
  dateofSale DateTime @default(now())
  created_at DateTime @default(now())

}

